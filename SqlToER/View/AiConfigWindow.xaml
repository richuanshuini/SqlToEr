            <Setter Property="Foreground" Value="#4A5568" />
            <Setter Property="Margin" Value="0,0,0,4" />
            <Setter Property="FontWeight" Value="Medium" />
        </Style>

        <!-- è¾“å…¥æ¡† -->
        <Style x:Key="Field" TargetType="TextBox">
